function ebms_load_topic_articles($topicId, $packetId=0) {

    // If an article has already been assigned to a packet for this topic,
    // don't make it available for inclusion in another packet.  If an
    // article in a packet has been suppressed (drop_flag is 1), don't
    // consider it "assigned" for purposes of this logic.  Be careful
    // to avoid omitting articles just because they're already assigned
    // to the packet currently being edited.
    $rs = db_query('
SELECT a.article_id
  FROM {ebms_packet_article} a
  JOIN {ebms_packet} p
    ON p.packet_id = a.packet_id
 WHERE p.topic_id = %d
   AND p.packet_id <> %d
   AND a.drop_flag = 0', $topicId, $packetId);
    $alreadyAssigned = array();
    while ($row = db_fetch_object($rs))
        $alreadyAssigned[] = $row->article_id;
    ebms_debug("already assigned", $alreadyAssigned);
    $rs = db_query('
  SELECT a.article_id, a.art_title, a.art_pmid, a.art_journal, c.cycle_name,
         a.art_authors
    FROM {ebms_article} a
    JOIN {ebms_article_topic} t
      ON t.article_id = a.article_id
    JOIN {ebms_lit_review_cycle} c
      ON c.cycle_id = t.cycle_id
   WHERE t.topic_id = %d
ORDER BY c.cycle_id DESC, a.art_authors, a.art_journal, a.article_id DESC
   LIMIT 2000', $topicId);
    $articles = array();
    while ($row = db_fetch_object($rs)) {
        $id = $row->article_id;
        if (in_array($id, $alreadyAssigned))
            continue;
        $key = "article-$id";
        $title = htmlspecialchars($row->art_title);
        $pmid = $row->art_pmid;
        $citation = $row->art_journal;
        @preg_match('/(.+)\. (\d{4})[-:; ]/', $citation, $matches);
        $journal = htmlspecialchars($matches[1]);
        $year = $matches[2];
        $names = explode(' ', $row->art_authors);
        $authors = htmlspecialchars($row->art_authors);
        $author = htmlspecialchars($names[0]);
        $cycle = $row->cycle_name;
        $url = "http://www.ncbi.nlm.nih.gov/pubmed/$pmid";
        $link = "<a href='$url' target='_blank'>$pmid</a>";
        $display = "$author; $journal; $year; $link [$cycle]";
        $authTitle = "$authors: $title";
        $span = "<span title='$authTitle'>$display</span>";
        $articles[$id] = $span;
    }
    #    $articles[] = $row;
    /*
        $articleId = $row->article_id;
        $title = $row->art_title;
        $pmid = $row->art_pmid;
        $cite = $row->art_journal;
        $cycle = $row->cycle_name;
        $display = "<span title='$title'>$pmid - $cite</span> ($cycle)";
        $articles[$articleId] = $display;
    }
    ebms_debug('ebms_load_topic_articles', $articles);
    */
    return $articles;
}

function ebms_load_topic_reviewers($topicId, $entireBoard=false) {
    //ebms_debug('ebms_load_topic_reviewers', array($topicId, $entireBoard));
    if ($entireBoard)
        $rs = db_query('
  SELECT u.uid, u.name
    FROM {users} u
    JOIN {ebms_board_member} m
      ON m.user_id = u.uid
    JOIN {ebms_topic} t
      ON t.board_id = m.board_id
    JOIN {users_roles} ur
      ON ur.uid = u.uid
    JOIN {role} r
      ON r.rid = ur.rid
   WHERE t.topic_id = %d
     AND r.name = \'board member\'
ORDER BY u.name', $topicId);
    else
        $rs = db_query('
  SELECT u.uid, u.name
    FROM {users} u
    JOIN {ebms_topic_reviewer} r
      ON r.user_id = u.uid
   WHERE r.topic_id = %d
ORDER BY u.name', $topicId);
    $reviewers = array();
    while ($row = db_fetch_object($rs))
        $reviewers[$row->uid] = $row->name;
    return $reviewers;
}

