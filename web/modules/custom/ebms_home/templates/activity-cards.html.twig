<ul class="usa-card-group margin-top-1 tablet:margin-top-3 desktop:margin-top-5">
  {% for card in cards %}
  <li class="tablet:grid-col-6 usa-card usa-card--header-first">
    <div class="usa-card__container">
      <header class="usa-card__header">
        <h2 class="usa-card__heading">{{ card.title }}</h2>
      </header>
      <div class="usa-card__media">
        <div class="usa-card__img">
          <img src="/themes/custom/ebms/images/{{ card.img }}" alt="">
        </div>
      </div>
      <div class="usa-card__body">
        <ul class="usa-list">
        {% for item in card.items %}
          <li>{{ item }}</li>
        {% endfor %}
        {% if not card.items %}
          <li>{{ card.empty }}</li>
        {% endif %}
        </ul>
      </div>
      {% if card.url %}
      <div class="usa-card__footer">
        <a class="usa-button" href="{{ card.url }}">More</a>
      </div>
      {% endif %}
    </div>
  </li>
  {% endfor %}
