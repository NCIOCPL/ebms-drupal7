function ebms_make_packet_reviewers_html($topicId, $all, $checked,
                                         $first=false) {
    $c = $all ? ' checked="checked"' : '';
    $html = array('
<label for="edit-packet-reviewers">Reviewers:
<span class="form-required" title="At least one reviewer must be selected.">*</span>
</label>
