// Objects of this class conform to the expectations of the Drupal File API.
class EbmsUploadedDoc {
    function EbmsUploadedDoc($file, $uid) {
        $this->uid = $uid;
        $this->filepath = $file['tmp_name'];
        $this->filename = basename($file['name']);
        $this->filesize = $file['size'];
        $this->timestamp = time();
        $this->status = 1;
        $finfo = finfo_open(FILEINFO_MIME_TYPE);
        $this->filemime = finfo_file($finfo, $this->filepath);
    }
}

function ebms_new_save_doc() {

    // Collect the rest of the form's values.
    $docId = $_POST['doc'];
    $title = $_POST['title'];
    $boards = $_POST['boards'] ? $_POST['boards'] : array();
    $tags = $_POST['tags'] ? $_POST['tags'] : array();
    $topics = $_POST['topics'] ? $_POST['topics'] : array();

    // Only record topics if the 'summary' tag is selected.
    if ($topics) {
        $rs = db_query('
SELECT tag_id
  FROM {ebms_tag}
 WHERE tag_name = \'summary\'');
        $summaryTagId = db_result($rs);
        if (!in_array($summaryTagId, $tags))
            $topics = array();
    }

    // If this is a new document, create a row and save the file.
    if (!$docId) {

        global $user;
        //ebms_debug('ebms_new_save_doc', $_POST);
        //ebms_debug('ebms_new_save_doc', $_FILES);
        $error = $_FILES['file']['error'];
        $size = $_FILES['file']['size'];
        if ($error) {
            drupal_set_message("Failure uploading file; error code $error",
                               'error');
            return 0;
        }
        $file = new EbmsUploadedDoc($_FILES['file'], $user->uid);
        if (!$file->filepath || !$file->filename) {
            drupal_set_message('File not found', 'error');
            return 0;
        }
        if (!$size) {
            drupal_set_message('File is empty', 'error');
            return 0;
        }
        file_copy($file);
        drupal_write_record('files', $file);
        db_query('
INSERT INTO {ebms_doc} (file_id, when_posted, description, is_public)
     VALUES (%d, \'%s\', \'%s\', 0)', $file->fid, date('c'), $title);
        $docId = db_last_insert_id('ebms_doc', 'doc_id');
    }
    else {

        // Only thing that can be edited is the title.
        db_query('
UPDATE {ebms_doc}
   SET description = \'%s\'
 WHERE doc_id = %d', $title, $docId);

        // Clear out the related tables.  We'll re-populate the rows.
        db_query('DELETE FROM {ebms_doc_board} WHERE doc_id = %d', $docId);
        db_query('DELETE FROM {ebms_doc_topic} WHERE doc_id = %d', $docId);
        db_query('DELETE FROM {ebms_doc_tag} WHERE doc_id = %d', $docId);
    }

    // Update the related tables.
    foreach ($boards as $boardId)
        db_query('
INSERT INTO {ebms_doc_board} (doc_id, board_id) VALUES (%d, %d)',
                 $docId, $boardId);
    foreach ($tags as $tagId)
        db_query('
INSERT INTO {ebms_doc_tag} (doc_id, tag_id) VALUES (%d, %d)',
                 $docId, $tagId);
    foreach ($topics as $topicId)
        db_query('
INSERT INTO {ebms_doc_topic} (doc_id, topic_id) VALUES (%d, %d)',
                 $docId, $topicId);
    drupal_set_message("Saved document $docId");
    return $docId;
}

