function ebms_core_packet_fields($topicId, $packetId=0) {
    if (!$topicId)
        return '';
    $topicArticles = ebms_load_topic_articles($topicId, $packetId);
    $topicSummaries = ebms_load_topic_summaries($topicId);
    $packetReviewers = array();
    $nonTopicReviewers = false;
    if ($packetId) {
        $rs = db_query('
SELECT packet_title
  FROM {ebms_packet}
 WHERE packet_id = %d', $packetId);
        $title = db_result($rs);
        $rs = db_query('
SELECT article_id
  FROM {ebms_packet_article}
 WHERE packet_id = %d', $packetId);
        $packetArticles = array();
        while ($row = db_fetch_object($rs))
            $packetArticles[] = $row->article_id;
        $rs = db_query('
SELECT doc_id
  FROM {ebms_packet_summary}
 WHERE packet_id = %d', $packetId);
        $packetSummaries = array();
        while ($row = db_fetch_object($rs))
            $packetSummaries[] = $row->doc_id;

        // Topic reviewers are trickier.  By default the form starts out
        // with only the reviewers who are associated with the packet's
        // topic available for assignment to the packet.  But the board
        // manager creating the packet can also elect to toggle the list
        // of candidate reviewers to include all members of the topic's
        // board.  If there are any reviewers who were previously
        // assigned to the packet even though they are not associated
        // with the packet's topic, but they are still members of the
        // topic's board, then we will bring up the form with the
        // "show the whole board" option checked.
        $rs = db_query('
  SELECT u.uid
    FROM {users} u
    JOIN {ebms_topic_reviewer} r
      ON r.user_id = u.uid
   WHERE r.topic_id = %d
ORDER BY u.name', $topicId);
        $topicReviewers = array();
        while ($row = db_fetch_object($rs))
            $topicReviewers[] =$row->uid;
        $rs = db_query('
SELECT reviewer_id
  FROM {ebms_packet_reviewer}
 WHERE packet_id = %d', $packetId);
        while ($row = db_fetch_object($rs))
            $packetReviewers[] = $row->reviewer_id;
        $topicBoardMembers = ebms_load_topic_reviewers($topicId, true);
        foreach ($packetReviewers as $packetReviewer) {
            if (!in_array($packetReviewer, $topicReviewers)) {
                if (array_key_exists($packetReviewer, $topicBoardMembers)) {
                    $nonTopicReviewers = true;
                    break;
                }
            }
        }
    }
    else
        $title = htmlspecialchars(ebms_get_topic_name($topicId));

    // Display the checkboxes for packet articles.
    $html = array('
<div id="edit-packet-articles-wrapper" class="form-item">
<label for="edit-packet-articles">Articles:
<span class="form-required" title="At least one article must be selected.">*</span>
</label>
<div class="description">Which articles should be reviewed for this packet?</div>
<div class="form-checkboxes">
');
    foreach ($topicArticles as $id => $desc) {
        $checked = ' checked="checked"';
        if ($packetId && !in_array($id, $packetArticles))
            $checked = '';
        $html[] = '
<div class="form-item" id="edit-articles-' . $id . '-wrapper">
<label class="option" for="edit-articles-' . $id . '">
<input type="checkbox" name="articles[' . $id . ']"
       id="edit-articles-' . $id . '" value="' . $id . '"' . $checked . '
       class="form-checkbox ebms-article" /> ' . $desc . '</label>
</div>
';
    }
    $html[] = '
</div>
</div>
';

    // Display the checkboxes for the packets's summaries.
    $html[] = '
<div id="edit-packet-summaries-wrapper" class="form-item">
<label for="edit-packet-summaries">Summary Documents:</label>
<div class="description">Optionally identify one or more summaries associated with this packet.</div>
<div class="form-checkboxes">
';
    foreach ($topicSummaries as $id => $desc) {
        $desc = htmlspecialchars($desc);
        $checked = '';
        if ($packetId && in_array($id, $packetSummaries))
            $checked = ' checked="checked"';
        $html[] = '
<div class="form-item" id="edit-summaries-' . $id . '-wrapper">
<label class="option" for="edit-summaries-' . $id . '">
<input type="checkbox" name="summaries[' . $id . ']"
       id="edit-summaries-' . $id . '" value="' . $id . '"' . $checked . '
       class="form-checkbox" /> ' . $desc . '</label>
</div>
';
    }
    $html[] = '
</div>
</div>
';

    // Display the checkboxes for the packet's reviewers.
    $first = $packetId ? false : true;
    $html[] = '<div id="edit-packet-reviewers-wrapper" class="form-item">';
    $html[] = ebms_make_packet_reviewers_html($topicId, $nonTopicReviewers,
                                              $packetReviewers, $first);
    $html[] = '
</div>
<div class="form-item" id="edit-packet-title-wrapper">
 <label for="edit-packet-title">Packet title: <span class="form-required" title="This field is required.">*</span></label>
 <input type="text" maxlength="128" name="title" id="edit-packet-title" size="60" value="' . $title . '" class="form-text required" />
 <div class="description">How should the packet be identified in lists?</div>
</div>
<input type="button" name="op" id="edit-packet-submit" class="form-submit"
          value="Save" onclick="javascript:ebmsPacketSave()"/>
';
    return implode('', $html);
}

